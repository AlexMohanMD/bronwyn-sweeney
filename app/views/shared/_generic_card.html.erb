<div class="max-w-2xl p-6 rounded-lg shadow bg-neutral-800 border-neutral-700 mb-9">
  <h5 class="mb-2 text-2xl font-bold tracking-tight text-white"><%= content_block_title(content_alias, false)%></h5>
  <p class="mb-3 font-normal text-neutral-200">
    <%= unless header_image.nil? then image_tag header_image, class: "w-48" end %>
      <div class="mb-3 font-normal text-neutral-200"><%= content_block(content_alias, false)%></div>
    </p>
    <% unless content_block_cta_link(content_alias).nil? %>
      <%= link_to content_block_cta_link(content_alias), class: "focus:outline-none text-white bg-orange-700 hover:bg-orange-800 focus:ring-4 focus:ring-orange-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-2 dark:bg-orange-600 dark:hover:bg-orange-700 dark:focus:ring-orange-900" do %>
        <%= content_block_cta_label(content_alias) %>
      <% end %>
    <% end %>
  </div>
