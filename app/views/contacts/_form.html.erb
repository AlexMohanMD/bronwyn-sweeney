<%= form_with(model: contact, class: "contents") do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(contact.errors.count, "error") %> meant your message wasn't sent:</h2>
      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :email, class:"block mb-2 text-sm font-medium text-white" %>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <svg aria-hidden="true" class="w-5 h-5 text-gray-500 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
      </div>
      <%= form.text_field :email, class: "border text-gray-900 text-sm rounded-lg block w-full pl-10 p-2.5  bg-neutral-200 border-neutral-600 placeholder-neutral-400 focus:ring-orange-500 focus:border-orange-500", placeholder:"you@example.org" %>
    </div>
    
  </div>
  <div class="my-5">
    <%= form.label :name, class:"block mb-2 text-sm font-medium text-white" %>
    <%= form.text_field :name, class: "border text-gray-900 text-sm rounded-lg block w-full p-2.5  bg-neutral-200 border-neutral-600 placeholder-neutral-400 focus:ring-orange-500 focus:border-orange-500", placeholder: "John Smith" %>
  </div>
  <div class="my-5">
    <%= form.label :message, class:"block mb-2 text-sm font-medium text-white" %>
    <%= form.text_area :message, rows: 4, class: "border text-gray-900 text-sm rounded-lg block w-full p-2.5  bg-neutral-200 border-neutral-600 placeholder-neutral-400 focus:ring-orange-500 focus:border-orange-500", placeholder: "Hi..." %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-orange-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
